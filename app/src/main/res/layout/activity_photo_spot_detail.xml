<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 장소 정보 -->
        <TextView
            android:id="@+id/detail_name"
            android:text="장소명"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_address"
            android:text="주소"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp" />


        <!-- 코멘트 작성 버튼 -->
        <Button
            android:id="@+id/write_comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코멘트 작성"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:backgroundTint="#A47764"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_flag"
            android:drawablePadding="4dp" />

        <!--코멘트 예시들  -->
        <LinearLayout
            android:id="@+id/comment_examples"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/comment_background"
                android:padding="12dp"
                android:text="🗨 자연광 들 땐 사진이 예쁘게 나오는데 장소가 훌륭한지는 모르겠어요.\n가끔 중대생들이 소풍처럼 와서 쉼터로도 쓰고 시끌벅적해요."
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/comment_background"
                android:padding="12dp"
                android:text="😀 양성재-전정대 도로 빙 둘러 안 가고 여기 지나가면 지름길이다"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/comment_background"
                android:padding="12dp"
                android:text="😶 흙바닥이고 비포장이라 비오면 웅덩이에 진흙에 날라나니 유의 바람"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 코멘트 입력 UI (초기엔 안보임) -->
        <LinearLayout
            android:id="@+id/comment_section"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@drawable/comment_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">>

            <!-- 이모지 선택 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/emoji_happy"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_emoji_happy"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/emoji_neutral"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_emoji_neutral"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/emoji_sad"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_emoji_sad" />
            </LinearLayout>

            <EditText
                android:id="@+id/comment_input"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="샛길 스팟에 대한 코멘트를 작성해 주세요."
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textColor="#333333"
                android:textSize="14sp" />

            <Button
                android:id="@+id/photo_attach_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 첨부하기"
                android:textColor="#A47764"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_image"
                android:drawablePadding="6dp" />

            <Button
                android:id="@+id/comment_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코멘트 작성"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:backgroundTint="#A47764"
                android:textColor="@android:color/white"
                android:drawableLeft="@drawable/ic_flag"
                android:drawablePadding="6dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
