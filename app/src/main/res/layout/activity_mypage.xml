<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF">

        <!-- 상단: ID + 로그아웃 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- 위치 아이콘 (텍스트 왼쪽 아이콘처럼 보이기) -->
            <ImageView
                android:id="@+id/icon_location"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_location" />

            <!-- ID 텍스트 -->
            <TextView
                android:id="@+id/text_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icon_location"
                android:layout_marginStart="8dp"
                android:text="ID20250407 님"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- 로그아웃 버튼 -->
            <TextView
                android:id="@+id/text_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="로그아웃 >"
                android:textColor="#888888"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- 나만의 샛길 버튼 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ico_myByway"
                    android:contentDescription="나만의 샛길"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나만의 샛길"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 설정 버튼 -->
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/btn_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="설정"
                    android:src="@drawable/ico_tools" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="설정"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:text="내 히스토리"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- 맵 뷰가 들어와야 할 곳-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginBottom="16dp"/>

        <!-- 히스토리 목록 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:text="📷 충북대학교 야외공연장\n04.07 월" />
            <TextView android:text="⚙ 자취방 샛길\n04.07 월" android:layout_marginTop="12dp"/>
            <TextView android:text="📷 충대 정문 벚꽃나무\n04.07 월" android:layout_marginTop="12dp"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전체 내역 보기 →"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_background"
            android:textColor="#B68D6D"/>
    </LinearLayout>
</ScrollView>
